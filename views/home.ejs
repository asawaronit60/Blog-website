
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%posts.forEach(function(post){%>

    <h1 name="ti" ><%=post.title%></h1>
 
    <form style="float: right;" action="/delete" method="POST"> 
      <button name="delete_post" class="btn btn-danger" value="<%=post._id %>">Delete</button>
    </form>
    
    <form style="float: right;"  action="/update" method="POST"> 
      <button name="update_post" class="btn btn-secondary" value="<%=post._id %>">Update</button>
    </form>
    
    <p name="co">
    <%=post.content.substring(0, 40)+" ..."%>   
    
    <a href="/posts/<%=post.title%>">Read More</a>
    </p>
    

    <% }) %>


<%- include("partials/footer"); -%>
